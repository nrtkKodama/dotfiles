[user]
	name = {{ .git_name | quote }}
	email = {{ .email | quote }}
	{{ if ne .git_signingkey "" -}}
	signingkey = {{ .git_signingkey }}
	{{ end -}}
[color]
	ui = auto
[url "git@github.com:"]
	pushinsteadof = https://github.com/
[pager]
	branch = cat
	config = cat
[ghq]
	root = ~/.local/share
	root = ~/ghq
[commit]
	{{ if ne .git_signingkey "" -}}
	gpgsign = true
	{{ end -}}
[pull]
	rebase = true
[core]
	quotepath = false
[rebase]
	autoStash = true
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    light = false
    line-numbers = true
    side-by-side = true
{{ if eq .chezmoi.os "linux" -}}
[credential]
	credentialStore = cache
{{ end -}}
[credential "https://github.com"]
    helper =
    helper = !gh auth git-credential
[credential "https://gist.github.com"]
    helper =
    helper = !gh auth git-credential
